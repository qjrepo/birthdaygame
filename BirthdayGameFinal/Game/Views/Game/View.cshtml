<div class="row">


    <!-- middle column for story line -->
    <div class="column">
        <h2>story</h2>
        <p>Today is your birthday, and your parent hide your birthday gift in the house. Let's find it!'</p>
        @foreach (var i in ViewBag.Story)
        {
            <p>@i</p>
        }

    </div>

    <div class="column">

        <h2>Living room</h2>

        <div class="div2">

            <div class="rowinner">
                <div class="columninner">
                    <a onclick="location.href='@Url.Action("Fish", "Game")'"><img src="~/image/rrrr.jpg" style="width:100%"></a>
                </div>
                <div class="columninner">
                    <a asp-controller="Game" asp-action="Detail2"><img src="~/image/whitee.png" style="width: 100%"></a>
                </div>

                <div class="columninner">
                    <a onclick="document.getElementById('id01').style.display='block'"><img src="~/image/lockedd.jpg" style="width: 100%"></a>
                    @*<a id="myBtn2"><img src="~/image/lockedd.jpg" style="width: 100%"></a>*@
                </div>

                <div class="columninner">
                    <a asp-controller="Game" asp-action="Detail2"><img src="~/image/whitee.png" style="width:100%"></a>
                </div>

                <div class="columninner">
                    <a onclick="location.href='@Url.Action("TV", "Game")'"><img src="~/image/tvv.jpg" style="width: 100%"></a>
                </div>
                <div class="columninner">
                    <a asp-controller="Game" asp-action="Detail2"><img src="~/image/whitee.png" style="width: 100%"></a>
                </div>

                <div class="columninner">
                    <a class="button" onclick="location.href='@Url.Action("Sofa", "Game")'"><img src="~/image/sofa2.jpg" style="width:100%"></a>
                </div>
                <div class="columninner">
                    <a onclick="document.getElementById('id02').style.display='block'"><img src="~/image/coffee.jpg" style="width: 100%"></a>
                    @*<a id="coffeeBtn"><img src="~/image/coffee.jpg" style="width:100%"></a>*@
                </div>

                <div class="columninner">
                    <a asp-controller="Game" asp-action="Detail2"><img src="~/image/sofa3.jpeg" style="width:100%"></a>
                </div>

            </div>
        </div>

        <!-- The Modal for case-->
        <div id="id01" class="w3-modal">
            <div class="w3-modal-content">
                <div class="w3-container">
                    <span onclick="document.getElementById('id01').style.display='none'" class="w3-button w3-display-topright">&times;</span>
                    <p>This case is locked</p>

                    @foreach (var i in Model)
                    {@if (i == "key2")
                        {
                            <a href="@Url.Action("Case", "Game")">@i</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Wrongchoicecase", "Game")">@i</a>
                        }
                }

                </div>
            </div>
        </div>



        <!-- The Modal for case-->
        <div id="id02" class="w3-modal">
            <div class="w3-modal-content">
                <div class="w3-container">
                    <span onclick="document.getElementById('id02').style.display='none'" class="w3-button w3-display-topright">&times;</span>
                    <p>Coffee table looks like bad...we should fix it</p>
                    @foreach (var i in Model)
                    {@if (i == "screwdriver")
                        {
                            <a href="@Url.Action("Coffee", "Game")">@i</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Wrongchoicecase", "Game")">@i</a>
                        }
                }


                </div>
            </div>
        </div>


    </div>


    <div class="column">
        <div class="bag">

            <div id="flip">Bag</div>
            <div id="panel">
                @if (Model != null)
                {
                    @foreach (var i in Model)
                    {
                        <p>@i</p>
                    }}
            </div>

        </div>
    </div>

</div>



