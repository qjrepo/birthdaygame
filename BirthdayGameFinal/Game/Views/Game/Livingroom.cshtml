@{
}
@{
    ViewData["Title"] = "Living Room";
}
<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <style>
        div.a {
            position: relative;
            width: 100%;
            height: 120px;
        }
        div.b {
            position: absolute;
            right: 0;
            width: 100px;
            height: 120px;

        }
        .w3-modal {
            display: none; /* Hidden by default */
            position: fixed; /* Stay in place */
            z-index: 1; /* Sit on top */
            padding-top: 100px; /* Location of the box */
            left: 0;
            top: 0;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            overflow: auto; /* Enable scroll if needed */
            background-color: rgb(0,0,0); /* Fallback color */
            background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
            text-align: center;
        }

        .w3-modal-content {
            background-color: #fefefe;
            margin: auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            text-align:center;
        }

        body {
            background-repeat: no-repeat;
            background-size: 100%100%;
            background-image: url("/image/living.jpg");
        }

        #example1 {
            position: sticky;
            box-sizing: content-box;
            margin-left: auto;
            margin-right: auto;
            height: 50px;
            text-align: center;
        }


        .column {
            float: left;
            width: 33.3%;
            margin-top: 400px;
            text-align: center;
            align-items: center;
        }

        /* Clearfix (clear floats) */
        .row::after {
            content: "";
            clear: both;
            display: table;
        }


        .div2 {
            box-sizing: border-box;
            width: 50%;
            text-align: center;
            margin-left: auto;
            margin-right: auto;
        }

        .columninner {
            float: left;
            width: 50%;
        }

        /* Clearfix (clear floats) */
        .rowinner::after {
            content: "";
            clear: both;
            display: table;
        }
        #panel, #flip {
            padding: 5px;
            text-align: center;

        }

        #panel {

            display: none;
            text-align:center;
        }
    </style>
</head>
<body>

    <div class="a">
        <div class="b">
            <div style="position:relative;right:50px; bottom:6px;font-weight:bolder;font-size:24px" id="flip">
                Bag
            </div>
            <div id="panel"  style="position:relative; padding:20px 35px;right:50px; text-align:center">
                @foreach (var i in Model)
        {
            <p style="position:relative; font-size:20px; float:left; bottom:6px">@i</p><br />
       }
            </div>
            <script>
                $(document).ready(function(){
                  $("#flip").click(function(){
                    $("#panel").slideToggle("slow");
                  });
                });
            </script>
    </div>
    </div>
    <a style="float:right ;position:relative; bottom:120px;font-weight:bolder;font-size:24px;color:rgb(0,0,0)" href="@Url.Action("Livinghint","Game")">Hint</a>


    <div id="example1">

        <br/><br /><br />
        <p style="font-family: cursive;font-size:medium;">Today is your birthday, and your parent hide your birthday gift in the house. Let's find it!'</p>
        @foreach (var i in ViewBag.Story)
        {
            <p style="font-family: cursive;font-size:large;">@i</p>
        }

    </div>
    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
    <a class="button"  style="position:relative; top:180px;left:500px; margin-right:auto"><img src="~/image/rod.png" style="width: 5%"></a>
    <br /><br /><br />

    <a href='@Url.Action("Sofa", "Game")' style="position:relative; bottom:0px;margin-left:0;"><img src="~/image/sofaa.png" style="width: 32%"></a>
    <a class="button" href='@Url.Action("Fish", "Game")' style="position:relative;bottom:0px;margin-left:auto;margin-right:auto"><img src="~/image/table.png" style="width: 30%"></a>
    <a onclick="document.getElementById('id02').style.display='block'" style="position:relative;bottom:0px;margin-right:0;"><img src="~/image/rsofa.jpg" style="width: 32%"></a>




    <div id="id02" class="w3-modal">
        <div class="w3-modal-content">
            <div class="w3-container">
                <span onclick="document.getElementById('id02').style.display='none'" class="w3-button w3-display-topright">&times;</span>
                <p>There is a locked case.</p>
                @foreach (var i in Model)
                {@if (i == "key2")
                    {
                        <a href="@Url.Action("Case", "Game")">@i</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Wrongchoicecase", "Game")">@i</a>
                    }
            }
            </div>
        </div>
    </div>


</body>
</html>
