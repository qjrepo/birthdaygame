                    <script type="text/javascript">
                              alert("@ViewBag.Message");
                    </script>}
                @Html.Raw(TempData["empty1"])
                @*@Html.Raw(TempData["no"])*@
                @if (!string.IsNullOrEmpty(ViewBag.MessageNo))
                {
                    <script type="text/javascript">
                              alert("@ViewBag.MessageNo");
                    </script>}@*//added*@
            </form>

            <form>
                <input formaction="/Game/Yes" style="position:relative;background-color:rgb(204, 255, 204); border-radius: 12px;  left:60px;top:24px" type="submit" value="Yes" /><br />

                @ViewData["yesno"]
