            <form>
                <input formaction="/Game/No" type="submit" style=" position:relative; border-radius: 12px;  top:24px;left:22px;background-color:rgb(204, 255, 204); float:left;" value="No" />
                @if (!string.IsNullOrEmpty(ViewBag.Message))
