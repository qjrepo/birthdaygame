

@{
    ViewData["Title"] = "Game Room";
}

<html>
<head>
    <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <style>
        div.a {
            position: relative;
            width: 100%;
            height: 120px;
        }

        div.b {
            position: absolute;
            right: 0;
            bottom: 0;
            width: 100px;
            height: 120px;
        }

        body {
            background-repeat: no-repeat;
            background-size: 100% 100%;
            background-image: url("/image/111.jpg");
        }


        div.relative {
            position: relative;
            float:left;
            bottom:80px;
            right: 100px;
            width: 400px;
            height: 200px;
            text-align: center;
            font-family: cursive;
            font-size: 24px;
        }

        .column {
            position: absolute;
            width: 50%;
            text-align: center;
            align-items: center;
            margin-left: 280px;
            margin-right: auto;
            top: 550px;
        }

        /* Clearfix (clear floats) */
        .row::after {
            content: "";
            clear: both;
            display: table;
        }

        .button {
            width: 80%;
            border: black;
            background-color: transparent;
        }

        .div2 {
            box-sizing: border-box;
            width: 50%;
            text-align: center;
            margin-left: auto;
            margin-right: auto;
        }

        .columninner {
            float: left;
            width: 20%;
        }

        /* Clearfix (clear floats) */
        .rowinner::after {
            content: "";
            clear: both;
            display: table;
        }

        #panel, #flip {
            padding: 5px;
            text-align: center;
        }

        #panel {
            padding: 5px;
            display: none;
        }
    </style>
</head>
<body>


    <div class="a">
        <div class="b">
            <div style="position:relative;right:50px; bottom:6px;font-weight:bolder;font-size:24px" id="flip">
                Bag
            </div>
            <div id="panel" style="position:relative; padding:0px 40px;right:110px;">
                @foreach (var i in Model)
                {
                    <p style="position:relative;font-size:20px; float:left; left:50px; bottom:6px">@i</p><br />
                }
            </div>
            <script>
                $(document).ready(function(){
                  $("#flip").click(function(){
                    $("#panel").slideToggle("slow");
                  });
                });
            </script>
        </div>
    </div>
    <a style="float:right ;position:relative; bottom:120px;font-weight:bolder;font-size:24px;color:rgb(0,0,0)" href="@Url.Action("Gamehint","Game")">Hint</a>



    <div  style="position:sticky; right:80px; float:left" class="relative">

        @foreach (var i in ViewBag.GameStory)
        {
            @*<p style="position:relative;bottom:100px;right:400px; font-size:20px">@i</p><br/>*@
            @i <br/><br/>
        }
    </div>



    <div class="column">
        <div class="columninner">
            <a asp-controller="Game" asp-action="Level1"><img src="~/image/mm1.jpg" alt="Snow" style="width:100%"></a>
        </div>
        <div class="columninner">
            <a asp-controller="Game" asp-action="Level1"><img src="~/image/mm1.jpg" alt="Snow" style="width:100%"></a>
        </div>
        <div class="columninner">
            <a asp-controller="Game" asp-action="Level2"><img src="~/image/mm2.png" alt="Snow" style="width:100%"></a>
        </div>
        <div class="columninner">
            <a asp-controller="Game" asp-action="Level1"><img src="~/image/mm1.jpg" alt="Snow" style="width:100%"></a>
        </div>
    </div>





</body>
</html>

